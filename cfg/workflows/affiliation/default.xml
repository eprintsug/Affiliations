<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">
  <flow>
    <stage ref="affiliation"/>
  </flow>
   
  <stage name="affiliation">
    <component type="Field::Multi">
      <title><epc:phrase ref="affiliation_section_details" /></title>
      <field ref="primary_afid" required="no" />
      <field ref="primary_afid_type" required="no" />
      <field ref="org_identifiers" required="no"/>
      <field ref="name" required="yes" />
      <field ref="city" required="no" />
      <field ref="country_code" required="no" />
      <field ref="country" required="no" />
      <field ref="source" required="no" />
    </component>
  </stage>

</workflow>
